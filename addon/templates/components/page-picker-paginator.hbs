{{#if paginator.pageAmount}}
    <div class="paginator__button paginator__button--first"
         {{action "firstPage" on="click"}}>
      &lt;&lt;
    </div>
    <div class="paginator__button paginator__button--previous"
         {{action "previousPage" on="click"}}>
      &lt;
    </div>

    {{page-number value=paginator.page maxValue=paginator.pageAmount}}
    /
    <div class="paginator__max-pages">
      {{paginator.pageAmount}}
    </div>

    <div class="paginator__button paginator__button--next"
         {{action "nextPage" on="click"}}>
      &gt;
    </div>
    <div class="paginator__button paginator__button--last"
         {{action "lastPage" on="click"}}>
      &gt;&gt;
    </div>
{{/if}}
